<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".PurchaseHistory"
    android:background="#eaf3e3">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_bold_italic"
        android:text="Purchase History"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="188dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/raleway_medium_italic"
        android:text="The receipt format is date and time, click on desired receipt and download."
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="188dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_above="@+id/backDashboard">

    </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:id="@+id/buttons"
            android:background="#eaf3e3">


            <Button
                android:id="@+id/backCartActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:fontFamily="@font/raleway_semibold"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="20dp" />


            <Button
                android:id="@+id/backDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:fontFamily="@font/raleway_semibold"
                android:text="dashboard"
                android:textColor="@android:color/white"
                android:textSize="20dp" />



        </LinearLayout>

    </RelativeLayout>








</LinearLayout>

